<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/state_drawable"
            android:text="stateDrawable"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            tools:ignore="ButtonStyle,HardcodedText"/>

        <Button
            android:id="@+id/corner_drawable"
            android:text="corner_drawable"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            tools:ignore="ButtonStyle,HardcodedText"/>

        <Button
            android:id="@+id/layerDrawable"
            android:text="layerDrawable"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            tools:ignore="ButtonStyle,HardcodedText"/>

        <Button
            android:id="@+id/color_drawable"
            android:text="color_drawable"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            tools:ignore="ButtonStyle,HardcodedText" />

        <Button
            android:id="@+id/selectable_drawable"
            android:text="selectable_drawable"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            tools:ignore="ButtonStyle,HardcodedText"/>
    </LinearLayout>

    <View
        android:id="@+id/drawable_view"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_gravity="center_horizontal"
        android:layout_margin="50dp" />

</LinearLayout>